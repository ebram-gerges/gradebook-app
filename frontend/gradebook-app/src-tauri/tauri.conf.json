{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Gradebook Manager",
	"version": "1.0.0",
	"identifier": "com.gradebook.app",
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devUrl": "http://localhost:5173",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "Gradebook Manager",
				"width": 1400,
				"height": 900,
				"minWidth": 800,
				"minHeight": 600,
				"transparent": true,
				"decorations": true,
				"skipTaskbar": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["msi", "nsis", "rpm", "appimage", "dmg"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"http": {
			"scope": ["http://127.0.0.1:8000/**", "http://localhost:8000/**"]
		}
	}
}
